---
export interface Props {
  href: string
}

const { href } = Astro.props
---

<a
  class="flex
    justify-center
    items-center
    bg-white
    dark:bg-black
    w-10
    h-10
    border-2
    text-violet-500
    border-violet-400
    hover:text-violet-600
    hover:border-violet-500
    dark:text-violet-200
    dark:border-violet-400
    dark:hover:text-violet-300
    dark:hover:border-violet-500
    rounded-md
    transform
    transition-all
    hover:scale-110
    cursor-pointer"
  href={href}
  target="_blank"
  rel="noreferrer"
>
  <slot />
</a>
